# EditorConfig: http://editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_size = 2

[*.go]
indent_style = tab

[*.md]
indent_style = space
trim_trailing_whitespace = false

[*.{yaml,yml}]
indent_style = space

[Makefile]
indent_style = tab
